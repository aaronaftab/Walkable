<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:context=".MainActivity">


    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"
        android:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="335dp"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="462dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="9dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/classEventList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal"
        android:text="Class and Event List"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/blank1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="70dp"
        android:text="First Class/Event:" />

    <TextView
        android:id="@+id/blank3"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/blank1"
        android:layout_alignLeft="@+id/blank1"
        android:layout_marginStart="203dp"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="255dp"
        android:text="Second Class/Event:" />

    <TextView
        android:id="@+id/blank2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/blank1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:text="Time:" />

    <TextView
        android:id="@+id/class1input"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:layout_alignStart="@id/blank1"
        android:layout_alignLeft="@+id/blank1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="124dp"
        android:text="" />

    <TextView
        android:id="@+id/time"
        android:layout_width="98dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/class1input"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/blank1"
        android:layout_toRightOf="@+id/blank1"
        android:text="" />

    <TextView
        android:id="@+id/class2input"
        android:layout_width="50dp"
        android:layout_height="118dp"
        android:layout_alignEnd="@+id/blank3"
        android:layout_alignRight="@+id/blank3"
        android:layout_marginStart="-235dp"
        android:layout_marginLeft="-236dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="-150dp"
        android:layout_marginRight="-150dp"
        android:layout_toEndOf="@+id/blank2"
        android:layout_toRightOf="@+id/time"
        android:text="TextView" />


</RelativeLayout>


